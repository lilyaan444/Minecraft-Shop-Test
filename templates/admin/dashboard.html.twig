{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="admin-dashboard">
    <h1 class="minecraft-title">Admin Dashboard</h1>
    
    <div class="stats-grid">
        <div class="stat-card">
            <img src="{{ asset('images/minecraft/diamond.png') }}" alt="Products">
            <h2>{{ total_products }}</h2>
            <p>Total Products</p>
            <a href="{{ path('app_admin_products') }}" class="btn-minecraft">Manage Products</a>
        </div>
        
        <div class="stat-card">
            <img src="{{ asset('images/minecraft/player.png') }}" alt="Users">
            <h2>{{ total_users }}</h2>
            <p>Registered Users</p>
            <a href="{{ path('app_admin_users') }}" class="btn-minecraft">View Users</a>
        </div>
        
        <div class="stat-card">
            <img src="{{ asset('images/minecraft/chest.png') }}" alt="Orders">
            <h2>{{ total_orders }}</h2>
            <p>Total Orders</p>
            <a href="{{ path('app_admin_orders') }}" class="btn-minecraft">View Orders</a>
        </div>
    </div>

    <div class="recent-orders">
        <h2>Recent Orders</h2>
        <table class="table-minecraft">
            <thead>
                <tr>
                    <th>Reference</th>
                    <th>User</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {% for order in recent_orders %}
                    <tr>
                        <td>{{ order.reference }}</td>
                        <td>{{ order.user.firstName }} {{ order.user.lastName }}</td>
                        <td>{{ order.total }} diamonds</td>
                        <td>{{ order.status }}</td>
                        <td>{{ order.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}